#!/bin/sh

## Angel Fetch
## hostname
read -r host < /proc/sys/kernel/hostname

## operating sys
read -r kernel < /proc/sys/kernel/osrelease
. /etc/os-release

## terminal ;o
terminal=$TERM


## kernel ;|
read -r _ _ version _ < /proc/version
ke=${version%%-*}


## uptime ;)
UPTIME=$(uptime -p) 


## colors spoooky!
txtmag='[0;35m' # Magenta
txtcyn='[0;36m' # Cyan
txtwht='[0;37m' # White
txtred='[0;31m' # Red
txtgrn='[0;32m' # Green
txtylw='[0;33m' # Yellow
txtblu='[0;34m' # Blue
txtpur='[0;35m' # Purple
reset='[0m' # Reset

## output
printf '%s\n' "
  ${txtmag}âœ ${txtcyn}operating system${txtwht} â‡¢ ${PRETTY_NAME}
  ${txtmag}âœ ${txtcyn}shell${txtwht} â‡¢ ${SHELL##*/}
  ${txtmag}âœ ${txtcyn}kernal${txtwht} â‡¢ ${ke}
  ${txtmag}âœ ${txtcyn}terminal${txtwht} â‡¢ ${terminal}
  ${txtmag}âœ ${txtcyn}uptime${txtwht} â‡¢ ${UPTIME}

   _
 {\o/}
  /_\  welcome to ${txtylw}${host}${reset}, ${txtmag}${USER}${reset}. have a wonderful day. 
"
